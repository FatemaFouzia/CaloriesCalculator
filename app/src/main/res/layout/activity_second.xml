<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity">

    <TextView
        android:id="@+id/height2"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginTop="128dp"
        android:background="#BCBECA"
        android:gravity="center"
        android:text="Height"
        app:layout_constraintEnd_toStartOf="@+id/inches2"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/weight2"
        android:layout_width="94dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:background="#BCBECA"
        android:gravity="center"
        android:text="Weight"
        app:layout_constraintEnd_toStartOf="@+id/ibs2"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/height2" />

    <EditText
        android:id="@+id/inches2"
        android:layout_width="209dp"
        android:layout_height="57dp"
        android:layout_marginTop="124dp"
        android:layout_marginEnd="44dp"
        android:background="#3F51B5"
        android:ems="10"
        android:hint="Inches"
        android:inputType="textPersonName"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ibs2"
        android:layout_width="204dp"
        android:layout_height="56dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="44dp"
        android:background="#3F51B5"
        android:ems="10"
        android:hint="Ibs"
        android:inputType="textPersonName"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inches2" />

    <Button
        android:id="@+id/calculate2"
        android:layout_width="145dp"
        android:layout_height="49dp"
        android:layout_marginTop="64dp"
        android:backgroundTint="#09870E"
        android:text="Calculate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ibs2" />

    <TextView
        android:id="@+id/result2"
        android:layout_width="159dp"
        android:layout_height="44dp"
        android:layout_marginTop="148dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ibs2" />
</androidx.constraintlayout.widget.ConstraintLayout>