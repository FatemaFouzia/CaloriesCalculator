<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SecondActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/height2"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="90dp"
            android:textColor="#3F51B5"
            android:textSize="20dp"
            android:gravity="center"
            android:text="Height"

             />

        <EditText
            android:id="@+id/inches2"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="90dp"
            android:layout_marginEnd="40dp"
            android:background="#8C97D8"
            android:ems="10"
            android:hint="Inches"
            android:inputType="textPersonName"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/weight2"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:textColor="#3F51B5"
            android:textSize="20dp"
            android:gravity="center"
            android:text="Weight"/>
        <EditText
            android:id="@+id/ibs2"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="40dp"
            android:background="#8C97D8"
            android:ems="10"
            android:hint="Ibs"
            android:inputType="textPersonName"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/inches2" />
    </LinearLayout>

    <Button
        android:id="@+id/calculate2"
        android:layout_width="300dp"
        android:layout_height="65dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"
        android:backgroundTint="#0AB310"
        android:text="Calculate" />

    <TextView
        android:id="@+id/result2"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#8C97D8"
        android:gravity="center" />

    <Button
        android:id="@+id/next_button"
        android:layout_width="300dp"
        android:layout_height="65dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"
        android:backgroundTint="#0AB310"
        android:text="Button" />
</LinearLayout>